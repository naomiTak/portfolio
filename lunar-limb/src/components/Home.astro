---
import Animation from "./Animation.astro"
---
<section id="home">
    <div class="homearea">
        <img src="../../public/images/top.jpg" class="topimg">
        <div class="introductionBackground">
            <div class="introduction">
                <h1>Hello!</h1>
                <h2>My name is <span class="myname">Naomi</span>. </h2>
                <h2>I am a software developer/web developer with 6 years experience.<br>
                    and passionated about new technology.</h2>
            </div>
            <Animation />
        </div>
    </div>
</section>

<style>
    #home{
        text-align: center;
    }
    .topimg {
    width: 100%;
    height: 100vh;
    object-fit: cover;
    object-position: 20% 20%;
    position: relative;
    }
    .introductionBackground{
        width: 100%;
        height: 100vh;
        top: 0;
        /* margin-top: -100vh; */
        background: linear-gradient(rgba(0, 44, 105, 0.2), rgba(0, 8, 46, 0.8));
        position: absolute;
        z-index: 1;
        text-align: center;
    }
    .introduction{
        color: white;
        position: relative;
        text-align: center;
        top: 50%;
        margin: 0 auto;
        animation: fadeUpAnime;
        animation-duration: 1s;
        animation-fill-mode: forwards;
        animation-timing-function: ease-in;
        opacity: 0;
    }
    
    @keyframes fadeUpAnime {
        from {
            opacity: 0;
            color: navy;
            filter: blur(10px);
            transform: translateY(-30%);
        }
        to {
            opacity: 1;
            filter: none;
            transform: translateY(-50%);
        }
    }
</style>